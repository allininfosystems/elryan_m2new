<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Forgotten password verification</title>
        <css src="Themecafe_CustomerRegister::css/themecafeCustomerRegister.css"/>
    </head>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Verify Your Forgot Password OTP</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Themecafe\CustomerRegister\Block\VerifyForgotPassword" ifconfig="themecafe_customer_verification/general/active" name="verify.forgotPassword" template="Themecafe_CustomerRegister::form/verifyforgotpassword.phtml"></block>
        </referenceContainer>
    </body>
</page>
